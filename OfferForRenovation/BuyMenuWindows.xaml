<Window x:Class="OfferForRenovation.BuyMenuWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfferForRenovation"
        mc:Ignorable="d"
        Title="BuyMenuWindows" Height="150" Width="250">
    <StackPanel x:Name="buy_stack">
        <Label Content="Amount" Padding="10" Background="LightBlue"/>
        <TextBox Text="{Binding Actual.Amount, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Button Content="Save" Padding="10" Click="Button_Click"/>
    </StackPanel>
</Window>
