<Window x:Class="OfferForRenovation.ComponentEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OfferForRenovation"
        xmlns:vms="clr-namespace:OfferForRenovation.ViewModels"
        mc:Ignorable="d"
        Title="ComponentEditor" Height="280" Width="300">
    
    <StackPanel x:Name="stack">
        <Label Content="Name" Padding="10" Background="LightBlue"/>
        <TextBox Text="{Binding Actual.Name, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="Price" Padding="10" Background="LightBlue"/>
        <TextBox Text="{Binding Actual.Price, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="TypePrice" Padding="10" Background="LightBlue"/>
        <TextBox Text="{Binding Actual.TypePrice, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Button Content="Save" Padding="10" Click="Button_Click"/>
    </StackPanel>
</Window>
